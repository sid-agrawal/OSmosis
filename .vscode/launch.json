    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "run-proc-model-with-sudo",
            "type": "debugpy",
            "cwd": "${workspaceFolder}/scripts/proc",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/proc/proc_model.py",
            "console": "integratedTerminal",
            "sudo": true,
            "args": [
                "--pid",
                "282157",
                "--csv",
                "debug.csv"
            ]
        },
        //"console": "externalTerminal",
    ]
}